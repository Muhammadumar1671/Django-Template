# =============================================================================
# DJANGO ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values

# Environment (development, production)
DJANGO_ENV=development

# =============================================================================
# SECURITY
# =============================================================================
# Generate a secure secret key for production:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here-generate-with-django

# =============================================================================
# DATABASE CONFIGURATION (Production - PostgreSQL)
# =============================================================================
# For Development: Set USE_POSTGRES=True to use PostgreSQL instead of SQLite
USE_POSTGRES=False

# Option 1: Use DATABASE_URL (recommended for production)
DATABASE_URL=postgresql://user:password@localhost:6432/dbname

# Option 2: Use individual variables (for both development and production)
DB_NAME=django_db
DB_USER=django_user
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=6432  # PgBouncer port (use 5432 for direct PostgreSQL connection or development)

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/1
REDIS_CHANNELS_URL=redis://localhost:6379/2

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# EMAIL CONFIGURATION (Production)
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@example.com
SERVER_EMAIL=server@example.com
ADMIN_EMAIL=admin@example.com

# =============================================================================
# EMAIL SERVICE CONFIGURATION
# =============================================================================
# Global email enable/disable (useful for development/testing)
# Set to False to disable all email sending
EMAIL_ENABLED=True

# Email provider: 'smtp', 'sendgrid', or 'resend'
EMAIL_PROVIDER=smtp

# API key for email provider (required for sendgrid/resend)
EMAIL_PROVIDER_API_KEY=

# Default sender name for emails
DEFAULT_FROM_NAME=Django App

# Email template source configuration:
# - 'db': Try database templates first, fallback to static files (default)
# - 'static': Only use static template files
# - 'db_only': Only use database templates (no fallback)
USE_DB_EMAIL_TEMPLATES=db

# Frontend URL (for email links like password reset, email verification)
FRONTEND_URL=http://localhost:3000

# Site name (used in email templates)
SITE_NAME=Django App

# =============================================================================
# ALLOWED HOSTS (Production - comma-separated)
# =============================================================================
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com

# =============================================================================
# CORS CONFIGURATION (Production - comma-separated)
# =============================================================================
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# CSRF TRUSTED ORIGINS (Production - comma-separated)
# =============================================================================
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://api.yourdomain.com

# =============================================================================
# COOKIE DOMAIN (Optional - for subdomain support)
# =============================================================================
# Set this if you want cookies to work across all subdomains
# COOKIE_DOMAIN=.yourdomain.com

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECURE_SSL_REDIRECT=True

# =============================================================================
# LOGGING (Production)
# =============================================================================
LOG_FILE_PATH=/var/log/django/django.log
ERROR_LOG_FILE_PATH=/var/log/django/error.log

# =============================================================================
# UNFOLD ADMIN CONFIGURATION
# =============================================================================
UNFOLD_SITE_TITLE=My Django App
UNFOLD_SITE_HEADER=My Django Administration
UNFOLD_SITE_URL=https://yourdomain.com

# =============================================================================
# TIME ZONE
# =============================================================================
TIME_ZONE=UTC

# =============================================================================
# OPTIONAL: SENTRY ERROR TRACKING
# =============================================================================
# SENTRY_DSN=your-sentry-dsn-here

# =============================================================================
# OPTIONAL: THIRD-PARTY API KEYS
# =============================================================================
# Add your third-party API keys here
# STRIPE_PUBLIC_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...
# OPENAI_API_KEY=sk-...
